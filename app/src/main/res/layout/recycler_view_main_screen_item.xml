<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    app:cardBackgroundColor="#C80707">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/restaurantImageView"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_margin="10dp"
            android:src="@drawable/restaurant_placeholder" />

        <TextView
            android:id="@+id/restaurantNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="20sp"
            android:layout_toEndOf="@id/restaurantImageView"
            android:text="Restaurant's name"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/favoriteImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/restaurantAddressTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/ic_baseline_red_favorite"/>

        <ImageView
            android:id="@+id/addressImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantNameTextView"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/restaurantImageView"
            android:src="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/restaurantAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantNameTextView"
            android:layout_margin="4dp"
            android:layout_marginLeft="40sp"
            android:layout_toEndOf="@id/addressImageView"
            android:text="Restaurant's address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/PriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantAddressTextView"
            android:layout_alignBottom="@+id/restaurantImageView"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@id/restaurantImageView"
            android:gravity="center"
            android:text="Price:"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/restaurantPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantAddressTextView"
            android:layout_alignBottom="@+id/restaurantImageView"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@id/PriceTextView"
            android:gravity="center"
            android:text="Â£20"
            android:textSize="32sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>